<g:VerticalPanel ui:field="vp" >
                 <g:HorizontalPanel >		
				 	<g:VerticalPanel styleName="{style.header}">
				 	<g:HTML><h3>Cloud GIS</h3></g:HTML>
					<g:VerticalPanel styleName="{style.logio}">
					</g:VerticalPanel>
				  	<g:HTML><h4>Login/out Panel</h4></g:HTML>
				  	</g:VerticalPanel>
				 </g:HorizontalPanel>
				  
  <g:HorizontalPanel ui:field="hp">
	<g:VerticalPanel styleName="{style.queries}" ui:field="vp1">
<!--			 <g:VerticalPanel styleName="{style.queries}">-->
			 <g:HTML><h4>Site Search</h4></g:HTML>
			 <g:TabLayoutPanel barUnit='PX' barHeight='20' styleName="{style.tabPanel}"  ui:field="queryTabPanel" >	
				<g:tab>
					<g:customHeader size='5'>
          			<g:Label styleName="{style.label}">LatLong </g:Label>
        			</g:customHeader>
				    	<g:VerticalPanel ui:field="vLatLongPanel" styleName="{style.vLatLongPanel}" >
						<g:Label ui:field="latLabel" text="P1 Latitude" styleName="{style.textlabel}" />
						<g:TextBox ui:field="latitudeBox" styleName="{style.lattextbox1}" text="Enter Lattitude"></g:TextBox>
						<g:Label ui:field="longLabel" text="P1 Longitude" styleName="{style.textlabel}" />
						<g:TextBox ui:field="longitudeBox" styleName="{style.lattextbox1}" text="Enter Longitude"></g:TextBox>
						<g:Label ui:field="speRadLabel" text="Specified Radius" styleName="{style.textlabel}"/>
						<g:TextBox ui:field="SpeRadBox" styleName="{style.lattextbox2}" text="Enter Radius" />
						<g:HorizontalPanel ui:field="hLatLongPanel">
							<g:Button ui:field="latLongSearch" text="Search" styleName="{style.Button}" />
							<g:Button ui:field="latLongClear" text="Clear" styleName="{style.Button}" />
						</g:HorizontalPanel>
						<g:Label ui:field="errorLabel"></g:Label>
					</g:VerticalPanel>
	
				</g:tab>
				<g:tab>
					<g:customHeader size='5'>
          			<g:Label styleName="{style.label}">KeyWord</g:Label>
        			</g:customHeader>    	
				    	<g:VerticalPanel ui:field="vKeyWordPanel" styleName="{style.vLatLongPanel}" >
						<g:Label ui:field="addLabel" text="Address :" styleName="{style.textlabel}"/>
						<g:TextBox ui:field="addressBox" styleName="{style.lattextbox1}" text="Enter Address"></g:TextBox>
						<g:Label ui:field="kspeRadLabel" text="Specified Radius" styleName="{style.textlabel}"/>
						<g:TextBox ui:field="kSpeRadBox" styleName="{style.lattextbox2}" text="Enter Radius"></g:TextBox>
						<g:HorizontalPanel ui:field="hKeyWrdPanel">
							<g:Button ui:field="addressSearch" text="Search" styleName="{style.Button}" />
							<g:Button ui:field="addressClear" text="Clear" styleName="{style.Button}" />
						</g:HorizontalPanel>
						</g:VerticalPanel>
				</g:tab>
				<g:tab>
					<g:customHeader size='5'>
          			<g:Label styleName="{style.label}">Spatial</g:Label>
        			</g:customHeader>
						<g:VerticalPanel ui:field="vSpatialPanel" styleName="{style.vLatLongPanel}" >
						<g:Label ui:field="stateLabel" text="State:" styleName="{style.textlabel}"/>
						<g:ListBox ui:field="stateBox" />
						<g:Label ui:field="districtLabel" text="District:" styleName="{style.textlabel}"/>
						<g:ListBox ui:field="districtBox" />
						<g:Label ui:field="localBodyLabel" text="Local Body:" styleName="{style.textlabel}"/>
						<g:ListBox ui:field="localBodyBox" />
						<g:Label ui:field="sspeRadLabel" text="Specified Radius" styleName="{style.textlabel}"/>
						<g:TextBox ui:field="sSpeRadBox" styleName="{style.lattextbox2}" text="Enter Radius"></g:TextBox>
							<g:HorizontalPanel ui:field="hSpatPanel">
							<g:Button ui:field="spatialSearch" text="Search" styleName="{style.Button}" />
							<g:Button ui:field="spatialClear" text="Clear" styleName="{style.Button}" />
						</g:HorizontalPanel>
						</g:VerticalPanel>
				</g:tab>
				<g:tab>
					<g:customHeader size='5'>
    			    <g:Label styleName="{style.label}">Attribute</g:Label>
        			</g:customHeader>
        				<g:VerticalPanel ui:field="vAttributePanel" styleName="{style.vLatLongPanel}" >
						<g:Label ui:field="queryIDLabel" text="Address:" styleName="{style.textlabel}"/>
						<g:TextBox ui:field="queryIDBox" text="Enter Address" />
						<g:Label ui:field="aspeRadLabel" text="Specified Radius:" styleName="{style.textlabel}"/>
						<g:TextBox  ui:field="aSpeRadBox"  text="Enter Radius"/>
							<g:HorizontalPanel ui:field="hAttributePanel">
							<g:Button ui:field="attributeSearch" text="Search" styleName="{style.Button}" />
							<g:Button ui:field="attributeClear" text="Clear" styleName="{style.Button}" />
						</g:HorizontalPanel>
						</g:VerticalPanel>
				</g:tab>
		</g:TabLayoutPanel>	
<!--	</g:VerticalPanel>		-->
				<g:VerticalPanel ui:field="admin"  styleName="{style.adminp}">
					<g:HTML><h4>Admin Panel</h4></g:HTML>
					<g:HorizontalPanel ui:field="hp5">
<!--					<g:Button ui:field="submitButton" text="Submit" styleName="{style.Button}" />-->
					</g:HorizontalPanel>
					<g:HorizontalPanel>
					<g:Button ui:field="loadButton" text="Load" styleName="{style.Button}" />
					<g:Button ui:field="displayButton" text="Display" styleName="{style.Button}" />
					</g:HorizontalPanel>
				</g:VerticalPanel>
		</g:VerticalPanel>
					
					<g:VerticalPanel >
						<g:HorizontalPanel styleName="{style.tools}">
						<g:HTML><h4>Tools Panel</h4></g:HTML> 
						</g:HorizontalPanel>
						<g:VerticalPanel styleName="{style.map}" ui:field="mapwrapper">	
						
						
						
					<gw:MapWidget ui:field="map">
					</gw:MapWidget>
					</g:VerticalPanel>
					</g:VerticalPanel>

					<g:VerticalPanel styleName="{style.layerm}" ui:field="vp2">
					<g:HTML><h4>Layer Manager Panel</h4>
					</g:HTML>
				
					
					</g:VerticalPanel>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel styleName="{style.datag}">
			<g:HTML><h4>DataGird Panel</h4></g:HTML>
			</g:HorizontalPanel>
        </g:VerticalPanel>
    
